<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rejestracja">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout3"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <Button
            android:id="@+id/frag_rej_menu"
            android:layout_width="117dp"
            android:layout_height="43dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="468dp"
            android:text="Menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frag_rej_rej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="408dp"
            android:text="Zarejestruj"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/frag_rej_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="35dp"
            android:ems="10"
            android:inputType="text"
            android:text="Login"
            app:layout_constraintBottom_toTopOf="@+id/frag_rej_haslo"
            app:layout_constraintEnd_toEndOf="@+id/frag_rej_haslo" />

        <EditText
            android:id="@+id/frag_rej_haslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:inputType="text"
            android:text="Hasło"
            app:layout_constraintBottom_toTopOf="@+id/frag_rej_pow_haslo"
            app:layout_constraintStart_toStartOf="@+id/frag_rej_pow_haslo" />

        <EditText
            android:id="@+id/frag_rej_pow_haslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp"
            android:ems="10"
            android:inputType="text"
            android:text="Powtórz hasło"
            app:layout_constraintBottom_toTopOf="@+id/frag_rej_rej"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>